<ul>
  <% comments.each_with_index do |comment,i| %>
    <% if comment.id.present? %>
    
      <p>コメント：<%= comment.content %></p>
      <%= link_to 'コメントを編集する', "#{picture.id}/comments/#{comment.id}/edit", remote: true, class: "btn btn-lg btn-success" %>
      <%= link_to 'コメントを削除する', "#{picture.id}/comments/#{comment.id}", method: :delete, remote: true, class: "btn btn-lg btn-danger" %>
      <% end %>

      <div id="comment-modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
    <% end %>
</ul>